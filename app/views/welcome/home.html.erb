<html>
  <head>
    <title>Accueil</title>
  </head>
  <body>
    <div class="container py-3 text-center">
      <h1>Bienvenue à toi !</h1>

      <h2>Voici la liste des gossips :</h2>
      <br/>
      <div class="card-deck">
        <% Gossip.all.each do |gossip| %>
          <div class="col-lg-4 col-md-6 mb-3">
            <div class="card text-left my-3">
              <div class="card-body">
                <h5 class="card-title">
                  <%= link_to "#{gossip.id}. #{gossip.title}", gossip_path(gossip.id) %>
                </h5>
                <p class="card-text"><%= gossip.content %></p>
              </div>
              <div class="card-footer">
                <p class="small text-right text-muted">Posté par <%= link_to "#{gossip.user.first_name}", user_path(gossip.user.id) %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

    </div>
  </body>
</html>