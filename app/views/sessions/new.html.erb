<html>
  <head>
  </head>

  <body>

    <div class="container py-5 text-center">
      <h1 style="color: #053557">Connexion</h1>

      <div class="m-5 px-5">
        <%= form_for :user, url: sessions_path do |f| %>

          <div class="form-group">
            <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: 'form-control', placeholder: 'Mot de passe' %>
          </div>
          <div class="d-flex justify-content-between">
            <div class="form-check mt-1">
              <%= f.check_box :remember_me, id:"defaultCheck1"%>
              <label class="form-check-label" for="defaultCheck1"> Se souvenir de moi</label>
            </div>


            <div class="btn-toolbar flex-nowrap justify-content-end mt-2" role="toolbar" aria-label="Toolbar with button groups">
              <div class="btn-group mr-2" role="group">
                <a href="<%= gossips_path %>" class="btn btn-dark mx-1">Retour</a>
              </div>
              <div class="btn-group mr-2" role="group">
                <%= submit_tag "Se connecter", class: "btn btn-success mx-1" %> 
              </div>
            </div>
          </div>

        <% end %>
      </div>
    </div>

  </body>

</html>
