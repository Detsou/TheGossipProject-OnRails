<html>
  <head>
    <title>The Gossip Project</title>
  </head>
  <body>
    <% if @gossip.errors.any? %>
    <div class="alert alert-danger pt-2 pb-0" role="alert">
        <p>Nous n'avons pas réussi à créer le gossip pour la (ou les) raison(s) suivante(s) :</p>
        <ul>
          <% @gossip.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
    <% end %>
    <div class="container text-center mt-5">
      <h1 style="color: #053557">Créer ton propre Gossip !</h1>
      <div class="m-5">
        <%= form_tag url_for(action: 'create'), method: "post" do %>

          <%= label_tag 'Titre' %> <br/>
          <%= text_field_tag 'title', @gossip.title, {class: 'col-6'} %>
          <br /> <br />

          <%= label_tag 'Contenu' %> <br/>
          <%= text_area_tag 'content', @gossip.content, {class: 'col-6'} %>
          <br /> <br />

          <%= submit_tag "Créer" %> 
        <% end %>
      </div>
    </div>
  </body>
</html>