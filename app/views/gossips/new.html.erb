
<html>
  <head>
  </head>
  <body>
    <% if @gossip.errors.any? %>
    <div class="container alert alert-danger mt-3 pt-3 pb-1" role="alert">
        <p>Nous n'avons pas réussi à créer le gossip pour la (ou les) raison(s) suivante(s) :</p>
        <ul>
          <% @gossip.errors.each_with_index do |message, i| %>
            <li><%= message[1] %></li>
          <% end %>
        </ul>
    </div>
    <% end %>
    <div class="container text-center mt-5">
      <h1 style="color: #053557">Créer ton propre Gossip ?</h1>
      <div class="m-5 px-5">
        <%= form_tag url_for(action: 'create'), method: "post" do %>

          <div class="form-group">
          <%= text_field_tag 'title', @gossip.title, class: 'form-control', placeholder: 'Titre' %>
          </div> 

          <div class="form-group">
          <%= text_area_tag 'content', @gossip.content, class: 'form-control', placeholder: 'Contenu' %>
          </div> 

          <div class="btn-toolbar flex-nowrap justify-content-end mt-4" role="toolbar" aria-label="Toolbar with button groups">
            <div class="btn-group mr-2" role="group">
              <a href="<%= gossips_path %>" class="btn btn-dark mx-1">Retour</a>
            </div>
            <div class="btn-group mr-2" role="group">
              <%= submit_tag "Créer", class: "btn btn-success mx-1" %> 
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </body>
</html>