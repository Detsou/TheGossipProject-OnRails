<html>
  <head>
  </head>
  <body>
    <% if @gossip.errors.any? %>
    <div class="container alert alert-danger mt-3 pt-3 pb-1" role="alert">
        <p>Nous n'avons pas réussi à modifier le gossip pour la (ou les) raison(s) suivante(s) :</p>
        <ul>
          <% @gossip.errors.each_with_index do |message, i| %>
            <li><%= message[1] %></li>
          <% end %>
        </ul>
    </div>
    <% end %>
    <div class="container text-center mt-5">
      <h1 style="color: #053557">Modifier le Gossip n°<%= @gossip.id %> ?</h1>

      <div class="m-5">
        <%= form_for @gossip do |f| %>
          <div class="form-group">
            <label>Titre</label>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Contenu</label>
            <%= f.text_area :content, class: 'form-control' %>
          </div>
          <div class="form-group mt-4">
            <button type="submit" class="btn btn-outline-dark">Modifier</button>
          </div>
        <% end %>
      </div>
    </div>
  </body>
</html>